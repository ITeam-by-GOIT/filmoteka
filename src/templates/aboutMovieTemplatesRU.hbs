<div class="modal-wrapper">
    <a class="modal-wrapper-link" href="">
        <div class="wrapper-img">
            <img class="img-modal" src="https://image.tmdb.org/t/p/w500{{poster_path}}" alt="cover film">
            <div class="overlay">

                {{!-- <svg class="modal-img-play" fill="red" width="12" height="16">
                    <use width="12" height="16" href="./play-svg.svg"></use>
                </svg> --}}
                <img class="modal-img-play" src="./play-orange.png" alt="icon play">
                {{!-- <img class="modal-img-play" src="./music-play.png" alt="icon play"> --}}

                {{!-- <img class="modal-img-play" src="./play-border.png" alt="icon play"> --}}


            </div>
        </div>
    </a>
    <div class="modal-right-part">
        <h2 class="modal-main-title">{{title}}</h2>
        <div class="modal-lists-wrapper">
            <ul class="modal-list-denominations list">
                <li class="modal-item-position">Оценка<span class="modal-item-span">/</span>Голоса</li>
                <li class="modal-item-position">Рейтинг</li>
                <li class="modal-item-position">Оригинальное название</li>
                <li class="modal-item-position">Жанр</li>
            </ul>
            <ul class="modal-list-descriptions list">
                <li class="modal-item-description item-flex">
                    <p class="modal-item-description-rating">{{vote_average}}</p><span class="modal-item-span">/</span>
                    <p class="modal-item-description-views">{{vote_count}}</p>
                </li>
                <li class="modal-item-description">{{popularity}}</li>
                <li class="modal-item-description">{{title}}</li>
                <li class="modal-item-description">
                    <ul class="modal-list-genres list">
                        {{#each genres}}
                        <li class="modal-item-genres">
                            {{this.name}}
                        </li>
                        {{/each}}
                    </ul>
                </li>
            </ul>
        </div>
        <h3 class="modal-secondary-title">Описание</h3>
        <p class="modal-film-description">{{overview}}</p>
        <div class="modal-wrapper-btn">
            <button class="modal-btn modal-btn-watched js-modal-btn-watched" type="button">добавить в просмотренное</button>
            <button
                class="visually-hidden modal-btn modal-btn-remove modal-btn-remove-watched js-modal-btn-remove-watched"
                type="button">переместить из просмотренных</button>
            <button class="modal-btn modal-btn-queue js-modal-btn-queue" type="button">добавить в очередь</button>
            <button class="visually-hidden modal-btn modal-btn-remove modal-btn-remove-queue js-modal-btn-remove-queue"
                type="button">переместить из очереди</button>
        </div>
    </div>
</div>